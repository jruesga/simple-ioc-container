<?xml version="1.0" encoding="utf-8"?>
<Configuration shutdownHook="disable">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%t] %-5p %c - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.ruesga.siocc" level="DEBUG" />
        <Root level="FATAL">
            <AppenderRef ref="stdout" />
        </Root>
    </Loggers>
</Configuration>